<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ljuni.connectuor">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name="com.orm.SugarApp">

        <meta-data
            android:name="VERSION"
            android:value="2" />
        <meta-data
            android:name="QUERY_LOG"
            android:value="true" />

        <activity
            android:name="connectuor.Main"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="connectuor.PaginaDeViagens"
            android:label="@string/title_activity_pagina_de_viagens"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="connectuor.FormularioNovaViagem" />
        <activity android:name="connectuor.PaginaDosGuias"></activity>
    </application>

</manifest>